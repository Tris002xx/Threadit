<div class="posts">
  <% posts.forEach((post)=>{%>
  <div class="post">
    <div class="post-user">
      <div class="post-user-icon"></div>
      <div class="post-user-name">@<%=post.user.username%></div>
      <div class="post-time"><%=`${post.createdAt}`%></div>
    </div>

    <div class="post-content">
      <h2 class="post-title"><%=post.title%></h2>
      <p class="post-text"><%=post.text%></p>
    </div>

    <div class="post-interactions">
      <div class="post-user-icon"></div>
      <div class="post-user-icon"></div>
      <div class="post-user-icon"></div>
      <div class="post-user-icon"></div>
    </div>
  </div>

  <!-- Comments -->
  <div class="comments">
    <% post.comments.forEach((comment)=>{%>

    <div class="comment">
      <div class="comment-user">
        <div class="comment-user-icon"></div>
        <div class="comment-user-name">@ <%=comment.user.username%></div>
      </div>

      <div class="comment-content">
        <h2 class="comment-text"><%=comment.text%></h2>
      </div>

      <div class="post-interactions">
        <div class="post-user-icon"></div>
        <div class="post-user-icon"></div>
      </div>
    </div>
    <%});%>
    <!-- End of Comments -->
  </div>
  <%});%>
</div>
